{% extends 'base.html.twig' %}

{% block title %}Tag index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Tag index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Couleur</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for tag in tags %}
                <tr>
                    <td>{{ tag.id }}</td>
                    <td style="color: {{ tag.couleur }}">{{ tag.nom }}</td>
                    <td>{{ tag.couleur }}</td>
                    <td>
                        <a href="{{ path('b_k_tag_show', {'id': tag.id}) }}">show</a>
                        <a href="{{ path('b_k_tag_edit', {'id': tag.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('b_k_tag_new') }}">Create new</a>
    </div>
{% endblock %}
