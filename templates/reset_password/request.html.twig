{% extends 'base.html.twig' %}
{% form_theme requestForm 'bootstrap_4_layout.html.twig' %}
{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <div class="container">
        {% for flashError in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
        <h1 id="h1RequestForm">Réinstialiser son mot de passe</h1>

        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div id="divRequestForm">
                <small>
                    Saisissez votre adresse électronique et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                </small>
            </div>

            <button class="btn btn-primary">Envoyer un courriel de réinitialisation du mot de passe</button>
    {{ form_end(requestForm) }}
    </div>
{% endblock %}
